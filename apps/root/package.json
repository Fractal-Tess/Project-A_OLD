{
  "name": "root",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development vite dev",
    "build": "cross-env NODE_ENV=production vite build",
    "package": "cross-env NODE_ENV=production svelte-kit package",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. .",
    "format": "prettier --write --plugin-search-dir=. ."
  },
  "inherits": [
    "@package/dependencies/vite.json",
    "@package/dependencies/svelte.json",
    "@package/dependencies/kit.json",
    "@package/dependencies/kit-adapters.json",
    "@package/dependencies/typescript.json",
    "@package/dependencies/prettier.json",
    "@package/dependencies/workspace-packages.json"
  ],
  "devDependencies": {
    "@sveltejs/adapter-node": "1.0.0-next.86",
    "@sveltejs/kit": "1.0.0-next.428",
    "autoprefixer": "^10.4.8",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "postcss": "^8.4.16",
    "postcss-load-config": "^4.0.1",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "sass": "^1.54.4",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.1",
    "svelte-preprocess": "^4.10.7",
    "tailwindcss": "^3.1.8",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "@package/common": "workspace:*",
    "@package/utils": "workspace:*",
    "@package/config": "workspace:*",
    "@package/fonts": "workspace:*",
    "@package/assets": "workspace:*",
    "@package/ui": "workspace:*",
    "@package/types": "workspace:*",
    "@sveltejs/adapter-static": "1.0.0-next.39",
    "vite": "^3.0.9",
    "@tsconfig/svelte": "^3.0.0",
    "cookie": "^0.5.0"
  }
}
