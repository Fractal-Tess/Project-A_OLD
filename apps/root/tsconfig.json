{
  "extends": "./.svelte-kit/tsconfig.json",

  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,

    "paths": {
      "$lib": ["./src/lib"],
      "$lib/*": ["./src/lib/*"],
      "$styles": ["./src/styles/app.scss"],
      "$src/*": ["./src/*"]
    }
  },
  "include": [
    "./src/app.d.ts",
    "./src/**/*.js",
    "./src/**/*.ts",
    "./src/**/*.svelte",
    "./vite.config.ts",
    ".svelte-kit/ambient.d.ts"
  ]
}
