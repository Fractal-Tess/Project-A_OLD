{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",

    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$types": ["src/types.ts"],
      "$styles": ["src/styles/app.scss"],
      "$stores/*": ["src/lib/stores/*"],
      "$src/*": ["src/*"],
      "$assets/*": ["src/assets/*"]
    }
  }
}
