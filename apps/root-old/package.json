{
  "name": "root",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development && pnpm run:dev",
    "run:dev": "concurrently -n=Tsc,Nodemon,Svelte -c=aqua,green,red pnpm:express:transpile:watch \"nodemon\" pnpm:svelte:build:watch",
    "svelte:dev": "vite",
    "svelte:build": "vite build",
    "svelte:build:watch": "vite build -w",
    "svelte:check": "svelte-check --tsconfig ./svelte.tsconfig.json",
    "express:transpile": "tsc -p ./src/tsconfig.json",
    "express:transpile:watch": "concurrently -n=tsc,tsc-alias -c=blue,aqua \"tsc -p ./src/tsconfig.json -w -preserveWatchOutput\" \" tsc-alias -p ./src/tsconfig.json -w\"",
    "format": "prettier --write --plugin-search-dir=. ."
  },
  "devDependencies": {
    "@prisma/client": "4.1.1",
    "@sendgrid/mail": "^7.7.0",
    "@sveltejs/vite-plugin-svelte": "^1.0.1",
    "@tsconfig/svelte": "^3.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^18.6.3",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "concurrently": "^7.3.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "prettier-plugin-svelte": "^2.7.0",
    "prisma": "^4.1.1",
    "svelte": "^3.49.0",
    "svelte-check": "^2.8.0",
    "svelte-preprocess": "^4.10.7",
    "tsc-alias": "^1.7.0",
    "tslib": "^2.4.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.0",
    "vite-plugin-html": "^3.2.0",
    "vite-plugin-singlefile": "^0.11.1",
    "zod": "^3.18.0"
  }
}
